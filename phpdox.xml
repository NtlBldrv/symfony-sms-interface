<?xml version="1.0" encoding="utf-8" ?>
<phpdox xmlns="http://phpdox.net/config">
    <project name="symfony-sms-interface" source="src" workdir="build/phpdox">
        <collector publiconly="false" backend="parser">
            <include mask="*.php"/>
        </collector>

        <generator output="build">
            <build engine="html" enabled="true" output="api">
                <file extension="html"/>
            </build>
            <enrich base="${basedir}/build/logs">
                <!-- @base - (Base-)Directory of datafiles used for enrich process -->

                <!-- add build information - this should always be enabled -->
                <source type="build"/>

                <!-- add phploc output -->
                <source type="phploc"/>

                <!-- add git vcs information -->

                <source type="git">
                    <git binary="/usr/bin/git"/>
                    <history enabled="true" limit="15" cache="${phpDox.project.workdir}/gitlog.xml"/>
                </source>


                <!-- enrichment source -->
                <source type="checkstyle">-->
                    <!-- @type - the handler for the enrichment -->
                    <!--         known types by default are: checkstyle, pmd, clover, phpunit -->

                    <!-- every enrichment source can have additional configuration nodes, most probably need a logfile -->
                    <file name="checkstyle.xml"/>
                </source>
                -->

                <!-- PHPMessDetector -->

                <source type="pmd">
                    <file name="pmd.xml"/>
                </source>
                <source type="phpunit">
                    <file name="junit.xml"/>
                </source>


            </enrich>

        </generator>
    </project>
</phpdox>
