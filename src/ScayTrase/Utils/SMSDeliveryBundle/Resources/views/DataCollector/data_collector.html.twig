{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
    <img width="23" height="28" alt="Swiftmailer"
         src="data:image/png;base64,""/>
    <span class="sf-toolbar-status  {% if collector.messageCount %}sf-toolbar-status-green{% endif %}">{{ collector.messageCount }}</span>
    {% endset %}

    {% set text %}
    <div class="sf-toolbar-info-piece">
        <b>Messages</b>
        <span>{{ collector.messageCount }}</span>
    </div>
    {% endset %}

    {% include '@WebProfiler/Profiler/toolbar_item.html.twig' with {'link':profiler_url} %}
    {# the web debug toolbar content #}
{% endblock %}

{% block head %}
    {{ parent() }}
    {# if the web profiler panel needs some specific JS or CSS files #}
{% endblock %}

{% block menu %}
    <span class="label">
        <span class="icon">
            <img alt="Short messages"
                 src="data:image/png;base64,"/>
        </span>
        <strong>Short messages</strong>
        <span class="count">
            <span>{{ collector.messageCount }}</span>
        </span>
    </span>
    {# the menu content #}
{% endblock %}

{% block panel %}
    <h2>Short Messages</h2>

    <h3>{{ collector.data.service }}</h3>

    {% if not collector.messageCount %}
        <p>
            <em>No message sent.</em>
        </p>
    {% else %}
        <table>
            <thead>
            <tr>
                <th scope="col">Status</th>
                <th scope="col">Messages</th>
            </tr>
            </thead>
            <tbody>
            {% for key,record in collector.data.messages %}
                <tr>
                    <td>{{ key }}</td>
                    <td>{{ record.message.recipient }}</td>
                    <td>{{ record.message.body }}</td>
                    <td>{{ record.message.reason }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endif %}
{% endblock %}